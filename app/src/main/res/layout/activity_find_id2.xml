<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FindId2Activity"
        android:background="@drawable/login_bg">

    <ImageView
            android:layout_width="231dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/login_logo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView11"
            app:layout_constraintVertical_bias="0.427"/>
    <TextView
            android:text="아이디 찾기"
            android:fontFamily="@font/noto_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="175dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.359"
            android:textSize="25sp" android:textStyle="bold" android:textColor="#FFFFFF"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout" android:layout_marginBottom="68dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.461">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/id_find_box"
            />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView
                            android:text="김유니"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/nameText"
                            android:layout_gravity="center"
                            android:fontFamily="@font/noto_sans_bold"
                            app:layout_constraintStart_toStartOf="@+id/textView11"
                            app:layout_constraintTop_toBottomOf="@+id/textView11"
                            android:textColor="#AEAEAE"/>
                    <TextView
                            android:text=" 님이 가입 시 입력하신 아이디는"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/Text2"
                            android:layout_gravity="center"
                            android:fontFamily="@font/noto_sans"
                            app:layout_constraintStart_toStartOf="@+id/textView11"
                            app:layout_constraintTop_toBottomOf="@+id/textView11"
                            android:textColor="#AEAEAE"/>
                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:orientation="horizontal">
                    <TextView
                            android:text="swu1010@naver.com"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/emailText"
                            android:layout_gravity="center"
                            android:fontFamily="@font/noto_sans_bold"
                            app:layout_constraintStart_toStartOf="@+id/textView11"
                            app:layout_constraintTop_toBottomOf="@+id/textView11"
                            android:textColor="#6D6890"/>
                    <TextView
                            android:text=" 입니다."
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:id="@+id/Text3"
                            android:layout_gravity="center"
                            android:fontFamily="@font/noto_sans"
                            app:layout_constraintStart_toStartOf="@+id/textView11"
                            app:layout_constraintTop_toBottomOf="@+id/textView11"
                            android:textColor="#AEAEAE"/>
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>
    <ImageView
            android:layout_width="306dp"
            android:layout_height="55dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/login_finish_btn"
            android:id="@+id/findFinishBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="304dp"
            app:layout_constraintHorizontal_bias="0.495"/>
    <TextView
            android:text="찾으시는 정보입니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:id="@+id/textView3"
            android:fontFamily="@font/noto_sans"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            android:textColor="#FFFFFF"/>


</androidx.constraintlayout.widget.ConstraintLayout>