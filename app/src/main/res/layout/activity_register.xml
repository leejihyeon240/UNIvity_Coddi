<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:background="@drawable/login_bg">

    <ImageView android:layout_width="338.29dp"
               android:layout_height="0dp"
               android:adjustViewBounds="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/login_logo"
               android:id="@+id/imageView8"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="71dp"
    />
    <ImageView
            android:layout_width="333.71dp"
            android:layout_height="51.08dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/next"
            android:id="@+id/nextBtn2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.48"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="678dp"/>
    <TextView
            android:text="회원가입"
            android:fontFamily="@font/noto_sans_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView11"
            android:textSize="25sp" android:textStyle="bold" android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="200.85dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="38.85dp"/>
    <TextView
            android:text="로그인 정보를 입력해주세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:id="@+id/textView3"
            android:fontFamily="@font/noto_sans"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="244dp" android:layout_marginLeft="38.85dp"/>
    <TextView
            android:text="이메일"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans_bold"
            android:id="@+id/textView4" android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="45.71dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="317.71dp"/>
    <TextView
            android:text="비밀번호"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:fontFamily="@font/noto_sans_bold"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="418.57dp"
            android:layout_marginLeft="45.71dp"/>
    <TextView
            android:text="비밀번호 확인"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7" android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="@font/noto_sans_bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="45.71dp" android:layout_marginTop="519.71dp"/>
    <TextView
            android:text="*사용 가능한 이메일입니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvIdChkView"
            android:textColor="#4CAF50"
            tools:visibility="visible" android:visibility="invisible" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="54.85dp" android:layout_marginTop="397.14dp"/>
    <TextView
            android:text="*비밀번호가 일치하지 않습니다."
            android:fontFamily="@font/noto_sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvPwdChk"
            android:visibility="visible" android:textColor="#FEC6C9"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="599.42dp" android:layout_marginLeft="54.85dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="345.71dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout3">
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="333.71dp"
                    android:layout_height="42.29dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/insert"
            />
            <EditText
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="Ex. univity@uni.com"
                    android:textSize="12sp"
                    android:singleLine="false" android:backgroundTint="#00000000"
                    android:layout_marginStart="10dp"
                    android:id="@+id/editEmail"
                    android:privateImeOptions="defaultInputmode=english"
                    android:layout_gravity="left|center"/>
            <TextView
                    android:text="중복확인"
                    android:textColor="#6D6890"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_bold"
                    android:id="@+id/tvIdChk"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="447.14dp"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linearLayout5">
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginBottom="20dp">

            <ImageView
                    android:layout_width="333.71dp"
                    android:layout_height="42.29dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/insert"
            />
            <EditText
                    android:layout_width="282dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editPwd"
                    android:layout_gravity="left|center"
                    android:hint="6자 이상 입력해주세요."
                    android:textSize="12sp"
                    android:singleLine="false" android:backgroundTint="#00000000"
                    android:layout_marginStart="10dp" android:password="true"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="548.28dp">
        <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="333.71dp"
                    android:layout_height="42.29dp"
                    android:id="@+id/imageView"
                    app:srcCompat="@drawable/insert"
                    android:adjustViewBounds="true"
            />

            <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="다시 한 번 입력해주세요"
                    android:layout_gravity="left|center"
                    android:textSize="12sp"
                    android:singleLine="false" android:backgroundTint="#00000000" android:layout_marginStart="10dp"
                    android:id="@+id/editPwdChk" android:password="true"/>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>