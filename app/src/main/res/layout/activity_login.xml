<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:scaleType="centerCrop"
        android:background="@drawable/login_bg">
    <ImageView
            android:layout_width="362.57dp"
            android:layout_height="303.14dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/login_box"
            android:id="@+id/imageView10"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="228dp"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="@+id/imageView10"
            app:layout_constraintEnd_toEndOf="@+id/imageView10"
            app:layout_constraintBottom_toBottomOf="@+id/imageView10" android:layout_marginBottom="40.20dp">

        <EditText
                android:layout_width="281.14dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/editTextId"
                android:fontFamily="@font/noto_sans"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:hint="이메일" android:layout_marginBottom="39.42dp"/>

        <EditText
                android:layout_width="281.14dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName|textPassword"
                android:ems="10"
                android:id="@+id/editTextPwd"
                android:layout_gravity="center"
                android:fontFamily="@font/noto_sans"
                android:textSize="12sp"
                android:hint="비밀번호" android:layout_marginBottom="9.14dp"/>

        <TextView
                android:text="이메일/비밀번호 찾기"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/findIdPwdBtn"
                android:textColor="#80000000"
                android:textSize="12dp"
                android:fontFamily="@font/noto_sans"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="textEnd"
                tools:ignore="RtlCompat" android:layout_marginBottom="17.9dp"/>

        <ImageView
                android:id="@+id/loginBtn"
                android:layout_width="281.15dp"
                android:layout_height="50.61dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:src="@drawable/login_button"/>

    </LinearLayout>
    <ImageView android:layout_width="338.29dp"
               android:layout_height="88.29dp"
               android:adjustViewBounds="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               android:src="@drawable/login_logo"
               android:id="@+id/imageView8"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="70.85dp"/>

    <ImageView android:layout_width="280.34dp"
               android:layout_height="376.59dp"
               android:adjustViewBounds="true"
               android:src="@drawable/login_uni" android:id="@+id/imageView7"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginTop="441.71dp" android:layout_marginLeft="224.28dp"/>
    <TextView
            android:text="회원가입하기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registerBtn"
            android:textColor="@color/white"
            android:fontFamily="@font/noto_sans"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="43.42dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>