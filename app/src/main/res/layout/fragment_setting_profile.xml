<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/setting_bg"
        tools:context=".SettingProfileFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginTop="39dp"
                  android:layout_marginRight="39dp"
                  android:layout_marginLeft="39dp"
                  android:orientation="vertical"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent">

        <ImageView android:id="@+id/backButton"
                   android:layout_width="15dp"
                   android:layout_height="25dp"
                   android:src="@drawable/setting_back"/>

        <TextView
                android:text="프로필 정보"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:textSize="26dp"
                android:layout_marginTop="37dp"/>

        <TextView
                android:id="@+id/nicknameText2"
                android:text="닉네임 님의 프로필 정보입니다."
                android:textColor="@color/white"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="12dp"/>

        <TextView
                android:text="이메일"
                android:layout_marginTop="61dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/insert"
                android:layout_marginBottom="20dp">
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="10dp"
                    android:text="abc1232@naver.com"
                    android:textColorHint="@color/black"
                    android:textSize="12dp"
                    android:singleLine="false"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/noto_sans"
                    android:includeFontPadding="false"
                    android:backgroundTint="#00000000"
                    android:id="@+id/editEmail"/>
        </LinearLayout>


        <TextView
                android:text="이름"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/insert">
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="안가연"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:fontFamily="@font/noto_sans"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/black"
                    android:singleLine="false"
                    android:backgroundTint="#00000000"
                    android:id="@+id/editFindName"/>

            <View android:layout_width="1dp"
                  android:layout_height="1dp"
                  android:layout_weight="1"/>
            <TextView

                    android:id="@+id/nameChg"
                    android:text="변경"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/notocjk_bold"
                    android:textColor="#6D6890"/>
        </LinearLayout>

        <TextView
                android:text="닉네임"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/insert">
            <EditText
                    android:text="킹왕짱"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="12dp"
                    android:fontFamily="@font/noto_sans"
                    android:includeFontPadding="false"
                    android:textColorHint="@color/black"
                    android:singleLine="false"
                    android:backgroundTint="#00000000"
                    android:id="@+id/editNickname"/>

            <View android:layout_width="1dp"
                  android:layout_height="1dp"
                  android:layout_weight="1"/>

            <TextView
                    android:text="변경"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/notocjk_bold"
                    android:textColor="#6D6890"
                    android:id="@+id/nicknameChg"/>
        </LinearLayout>



        <TextView
                android:text="목표 걸음수"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/insert">
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:editable="false"
                    android:text="10000보"
                    android:textColor="@color/black"
                    android:backgroundTint="#00000000"
                    android:textSize="12dp"
                    android:id="@+id/editGoal"/>

            <View android:layout_width="1dp"
                  android:layout_height="1dp"
                  android:layout_weight="1"/>

            <TextView
                    android:text="변경"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/notocjk_bold"
                    android:textColor="#6D6890"
                    android:id="@+id/goalChg"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>