<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="350dp"
             android:layout_height="600dp"
             android:layout_marginTop="213dp"
             android:layout_gravity="center_horizontal"
             android:background="@android:color/transparent">

    <!-- 타이틀바 -->
    <LinearLayout android:layout_width="334dp"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="26dp"
                  android:background="@drawable/round">


        <ImageView android:layout_width="50dp"
                   android:layout_height="50dp"
                   android:adjustViewBounds="true"
                   android:src="@drawable/logout_icon"
                   android:layout_gravity="center"
                   android:layout_marginTop="37dp"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notocjk_bold"
                android:includeFontPadding="false"
                android:gravity="center"
                android:layout_marginTop="11dp"
                android:text="로그아웃 하시겠습니까?"
                android:textColor="@color/black"
                android:textSize="23dp"/>

        <TextView
                android:textSize="14dp"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="로그아웃하실 경우\n기존의 정보는 모두 저장됩니다."
                android:fontFamily="@font/noto_sans"
                android:textColor="@color/black"/>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="29dp">

            <ImageView
                    android:id="@+id/logoutYesButton"
                    android:layout_width="134dp"
                    android:layout_height="51dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/store_yes_button"
                    android:onClick="mOnClick"/>

            <ImageView
                    android:id="@+id/logoutNoButton"
                    android:layout_width="134dp"
                    android:layout_height="51dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/store_no_button"
                    android:layout_marginLeft="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <ImageView android:layout_width="200dp"
               android:layout_height="52dp"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/univity_logo"/>

</FrameLayout>