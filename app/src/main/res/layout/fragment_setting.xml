<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/setting_bg"
                                                   tools:context=".SettingFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="337dp"
                  android:layout_height="101dp"
                  android:layout_marginTop="78dp"
                  android:background="@drawable/setting_box"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent">

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="23dp"
                      android:layout_marginRight="23dp"
                      android:layout_gravity="center_vertical">


            <TextView
                    android:id="@+id/nicknameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/onemobile_pop"
                    android:textColor="#6D6890"
                    android:textSize="28.5sp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/onemobile_pop"
                    android:text=" 님"
                    android:textColor="#6D6890"
                    android:textSize="28.5sp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/onemobile_pop"
                    android:text="Lv."
                    android:textColor="#6D6890"
                    android:textSize="14.2sp"
                    android:layout_marginLeft="5dp"/>
            <TextView
                    android:id="@+id/levelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/onemobile_pop"
                    android:textColor="#6D6890"
                    android:textSize="14.2sp"/>

            <View android:layout_width="wrap_content" android:layout_height="1dp"
                  android:layout_weight="1"/>

            <TextView
                    android:id="@+id/profileEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/noto_sans_bold"
                    android:text="프로필 수정"
                    android:textColor="#AEAEAE"
                    android:textSize="12dp"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="216dp"
            android:layout_marginStart="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">


        <TextView
                android:id="@+id/storyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:fontFamily="@font/noto_sans_bold"
                android:text="스토리 정보"
                android:textColor="@color/white"
                android:textSize="16dp"/>

        <TextView
                android:id="@+id/tutorialButton"
                android:text="튜토리얼"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/white"
                android:layout_marginTop="37dp"
                android:textSize="15dp"/>

        <TextView
                android:id="@+id/supportButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/white"
                android:layout_marginTop="37dp"
                android:textSize="15dp"
                android:text="고객지원"/>

        <TextView
                android:id="@+id/logoutButton"
                android:text="로그아웃"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:fontFamily="@font/noto_sans_bold"
                android:textColor="@color/white"
                android:layout_marginTop="37dp"
                android:textSize="15dp"/>

    </LinearLayout>

    <ImageView android:layout_width="280dp"
               android:layout_height="376dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginLeft="224dp"
               android:layout_marginBottom="50dp"
               android:src="@drawable/setting_uni"/>


</androidx.constraintlayout.widget.ConstraintLayout>