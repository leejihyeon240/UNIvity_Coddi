<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FindPwdActivity"
        android:background="@drawable/login_bg">

    <ImageView
            android:layout_width="231dp"
            android:layout_height="75dp"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/login_logo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/textView31"/>

    <TextView
            android:text="비밀번호 찾기"
            android:fontFamily="@font/noto_sans_bold"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:layout_height="wrap_content" android:id="@+id/textView31"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="636dp"
            android:layout_marginEnd="175dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            android:textSize="25sp" android:textStyle="bold" android:textColor="#FFFFFF"/>
    <TextView
            android:text="정보를 입력해주세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:id="@+id/textView30"
            android:includeFontPadding="false"
            android:fontFamily="@font/noto_sans"
            app:layout_constraintStart_toStartOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/textView31"
            android:textColor="#FFFFFF" android:layout_marginStart="3dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <TextView
                android:text="아이디"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans_bold"
                android:id="@+id/textView4"
                android:textSize="16sp"
                android:layout_marginStart="8dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" android:layout_marginBottom="5dp"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="25dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/insert"
            />
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="아이디를 입력해주세요."
                    android:layout_gravity="left|center"
                    android:textSize="12sp"
                    android:singleLine="false"
                    android:backgroundTint="#00000000"
                    android:layout_marginStart="10dp"
                    android:id="@+id/editId"/>
        </FrameLayout>
        <TextView
                android:text="이메일"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:id="@+id/textView6"
                android:fontFamily="@font/noto_sans_bold"
                android:textSize="16sp"
                android:layout_marginStart="8dp" android:textStyle="bold"
                android:textColor="#FFFFFF"/>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="20dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/insert"
            />
            <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:hint="이메일 주소를 입력해주세요."
                    android:layout_gravity="left|center"
                    android:textSize="12sp"
                    android:singleLine="false" android:backgroundTint="#00000000" android:layout_marginStart="10dp"
                    android:id="@+id/editEmail" android:password="true"/>
            <TextView
                    android:text="메일전송"
                    android:textColor="#6D6890"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans_bold"
                    android:id="@+id/textView22"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="15dp"
                    android:textStyle="bold"/>
        </FrameLayout>


    </LinearLayout>

    <ImageView
            android:layout_width="306dp"
            android:layout_height="55dp"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/find_finish_btn"
            android:id="@+id/imageView16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="220dp"
            app:layout_constraintHorizontal_bias="0.495"/>


</androidx.constraintlayout.widget.ConstraintLayout>